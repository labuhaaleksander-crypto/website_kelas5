    // Status Navigasi Aplikasi
    let currentView = 'subjects'; // 'subjects', 'chapters', 'material'
    let selectedSubject = null;
    let selectedChapter = null;
    let selectedMaterial = null;

    // Elemen DOM
    const contentDiv = document.getElementById('page-content');
    const titleHeader = document.getElementById('page-title');
    const mainNav = document.getElementById('main-nav');

    // Fungsi utilitas untuk ikon SVG
    const getIconSvg = (id, classes = "w-6 h-6 mr-2") => {
        return `<svg class="${classes} inline-block"><use xlink:href="#${id}"></use></svg>`;
    };

    // --- Manajemen Tampilan/Routing ---

    /**
     * Memuat dan merender navigasi utama (header).
     */
    function renderNavigation() {
        mainNav.innerHTML = `
            <button onclick="navigateTo('subjects')" class="nav-link text-white hover:text-secondary p-2 rounded-lg transition duration-150 ease-in-out flex items-center">
                ${getIconSvg('icon-book', 'w-5 h-5 mr-1')} Mata Pelajaran
            </button>
            <button onclick="navigateTo('about')" class="nav-link text-white hover:text-secondary p-2 rounded-lg transition duration-150 ease-in-out flex items-center">
                ${getIconSvg('icon-info', 'w-5 h-5 mr-1')} Tentang
            </button>
            <button onclick="navigateTo('admin')" class="nav-link text-white hover:text-secondary p-2 rounded-lg transition duration-150 ease-in-out flex items-center">
                ${getIconSvg('icon-cog', 'w-5 h-5 mr-1')} Pengaturan Admin
            </button>
            <button onclick="navigateTo('help')" class="nav-link text-white hover:text-secondary p-2 rounded-lg transition duration-150 ease-in-out flex items-center">
                ${getIconSvg('icon-help', 'w-5 h-5 mr-1')} Bantuan
            </button>
        `;
    }

    /**
     * Menavigasi antar tampilan utama.
     * @param {string} view - 'subjects', 'chapters', 'material', 'about', 'admin', 'help'
     * @param {string} [id=null] - ID subjek/materi jika diperlukan.
     */
    function navigateTo(view, id = null) {
        currentView = view;
        selectedSubject = null;
        selectedChapter = null;
        selectedMaterial = null;

        switch (view) {
            case 'subjects':
                renderSubjectList();
                break;
            case 'chapters':
                selectedSubject = courseData.find(s => s.id === id);
                if (selectedSubject) renderChapterList();
                break;
            case 'material':
                // Mengurai ID materi (contoh: ipas-1-1)
                const parts = id.split('-');
                const subjectId = parts[0];
                const chapterIndex = parseInt(parts[1]) - 1;
                const materialIndex = parseInt(parts[2]) - 1;

                selectedSubject = courseData.find(s => s.id === subjectId);
                if (selectedSubject) {
                    selectedChapter = selectedSubject.chapters[chapterIndex];
                    if (selectedChapter) {
                        selectedMaterial = selectedChapter.materials[materialIndex];
                        if (selectedMaterial) renderMaterialDetail();
                    }
                }
                break;
            case 'about':
                renderStaticPage('Tentang Ruang Belajar', getAboutContent());
                break;
            case 'admin':
                renderStaticPage('Pengaturan Admin', getAdminContent());
                break;
            case 'help':
                renderStaticPage('Bantuan & FAQ', getHelpContent());
                break;
            default:
                renderSubjectList();
        }
        window.scrollTo(0, 0); // Gulir ke atas setiap navigasi
    }

    // --- Tampilan Daftar Mata Pelajaran ---

    function renderSubjectList() {
        titleHeader.innerHTML = 'Daftar Mata Pelajaran Kelas 5';
        let html = '<div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 xl:grid-cols-4 gap-6">'; // Grid diperluas

        courseData.forEach(subject => {
            html += `
                <div class="subject-card ${subject.color} text-white p-6 rounded-xl cursor-pointer shadow-lg flex flex-col justify-between" onclick="navigateTo('chapters', '${subject.id}')">
                    <div class="flex items-center mb-4">
                        <span class="text-4xl mr-4">${subject.icon}</span>
                        <h3 class="text-2xl font-bold">${subject.title}</h3>
                    </div>
                    <p class="text-sm opacity-90">${subject.chapters.length} Bab Siap Dipelajari!</p>
                    <button class="mt-4 w-full bg-white text-gray-800 font-semibold py-2 rounded-lg hover:bg-secondary hover:text-white transition duration-200">
                        Mulai Belajar
                    </button>
                </div>
            `;
        });

        html += '</div>';
        contentDiv.innerHTML = html;
    }

    // --- Tampilan Daftar Bab ---

    function renderChapterList() {
        if (!selectedSubject) return navigateTo('subjects');

        titleHeader.innerHTML = `
            <button onclick="navigateTo('subjects')" class="text-primary hover:text-secondary mr-3 transition duration-150">${getIconSvg('icon-arrow-left', 'w-8 h-8')}</button>
            Bab Mata Pelajaran: <span class="text-secondary">${selectedSubject.title}</span>
        `;
        let html = '<div class="bg-white rounded-xl shadow-lg divide-y divide-gray-100">';

        selectedSubject.chapters.forEach((chapter, index) => {
            // ID chapter yang unik diperlukan untuk detail
            const chapterId = `${selectedSubject.id}-${index + 1}`;
            
            html += `
                <div class="chapter-item p-5 flex justify-between items-center" onclick="showChapterDetails('${selectedSubject.id}', ${index})">
                    <div class="flex items-center">
                        <span class="text-xl font-bold text-primary mr-4">${index + 1}.</span>
                        <h4 class="text-xl font-semibold text-gray-800">${chapter.title}</h4>
                    </div>
                    <span class="text-sm text-gray-500">${chapter.materials.length} Materi</span>
                </div>
                <div id="chapter-details-${chapterId}" class="hidden p-4 bg-gray-50 border-t border-gray-200">
                    <!-- Detail materi akan dimuat di sini -->
                </div>
            `;
        });

        html += '</div>';
        contentDiv.innerHTML = html;
    }

    /**
     * Menampilkan detail materi di bawah bab yang diklik.
     * @param {string} subjectId - ID Subjek.
     * @param {number} chapterIndex - Indeks Bab dalam array.
     */
    function showChapterDetails(subjectId, chapterIndex) {
        const chapter = courseData.find(s => s.id === subjectId).chapters[chapterIndex];
        const chapterId = `${subjectId}-${chapterIndex + 1}`;
        const detailDiv = document.getElementById(`chapter-details-${chapterId}`);
        
        if (!detailDiv) return; // Tambahkan pengaman

        const isVisible = !detailDiv.classList.contains('hidden');

        // Sembunyikan semua detail bab lain (di subjek yang sama)
        document.querySelectorAll(`[id^="chapter-details-${subjectId}-"]`).forEach(div => {
            if (div.id !== detailDiv.id) {
                div.classList.add('hidden');
            }
        });

        if (isVisible) {
            detailDiv.classList.add('hidden');
            return;
        }

        let materialHtml = '<ul class="list-disc ml-6 space-y-2">';
        chapter.materials.forEach((material, matIndex) => {
            // ID Materi: subjectId-chapterIndex+1-matIndex+1
            const materialId = `${subjectId}-${chapterIndex + 1}-${matIndex + 1}`;
            materialHtml += `
                <li class="text-gray-700">
                    <span class="font-medium mr-2 text-accent">[${material.type}]</span>
                    <a href="#" onclick="event.preventDefault(); navigateTo('material', '${materialId}')" class="text-primary hover:underline font-medium">
                        ${material.title}
                    </a>
                </li>
            `;
        });
        materialHtml += '</ul>';

        detailDiv.innerHTML = materialHtml;
        detailDiv.classList.remove('hidden');
    }

    // --- Tampilan Detail Materi ---

    function renderMaterialDetail() {
        if (!selectedMaterial || !selectedChapter || !selectedSubject) return navigateTo('subjects');

        titleHeader.innerHTML = `
            <button onclick="navigateTo('chapters', '${selectedSubject.id}')" class="text-primary hover:text-secondary mr-3 transition duration-150">${getIconSvg('icon-arrow-left', 'w-8 h-8')}</button>
            ${selectedChapter.title}: <span class="text-secondary">${selectedMaterial.title}</span>
        `;

        const html = `
            <div class="bg-card-bg rounded-xl shadow-lg p-6 sm:p-8">
                <div class="flex items-center mb-4 pb-4 border-b border-gray-200">
                    <span class="text-3xl mr-4">${selectedSubject.icon}</span>
                    <h2 class="text-2xl font-bold text-gray-800">${selectedMaterial.title}</h2>
                    <span class="ml-auto text-sm font-semibold px-3 py-1 rounded-full bg-accent text-white">${selectedMaterial.type}</span>
                </div>

                <div class="material-content text-gray-700 leading-relaxed space-y-4">
                    ${selectedMaterial.content}
                </div>

                <div class="mt-8 pt-4 border-t border-gray-200">
                    <p class="text-lg font-semibold text-primary">Ayo Coba!</p>
                    <button class="mt-2 bg-secondary text-white font-bold py-2 px-4 rounded-lg shadow-md hover:bg-orange-600 transition duration-200">
                        Kerjakan Kuis Pendek
                    </button>
                    <button class="mt-2 ml-3 bg-gray-300 text-gray-800 font-bold py-2 px-4 rounded-lg shadow-md hover:bg-gray-400 transition duration-200" onclick="alertCustom('Fitur Catatan sedang dalam pengembangan!')">
                        Buat Catatan
                    </button>
                </div>
            </div>
        `;
        contentDiv.innerHTML = html;
    }


    // --- Tampilan Halaman Statis ('Tentang', 'Admin', 'Bantuan') ---

    function getAboutContent() {
        return `
            <div class="bg-card-bg rounded-xl shadow-lg p-6 sm:p-8 space-y-4 text-gray-700">
                <p class="text-xl font-semibold text-primary">Apa itu Ruang Belajar Kelas 5?</p>
